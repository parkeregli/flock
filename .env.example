# Application port (default: 3000)
PORT=3000

# GitHub webhook secret (required for webhook mode)
# This should be a secure random string that matches your GitHub webhook configuration
WEBHOOK_SECRET=your_webhook_secret_here

# GitHub personal access token (required)
# Must have appropriate permissions for repository access
# Generate at: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# GitHub repository URL (optional)
# Only required when running in direct URL mode instead of webhook mode
# Example: https://github.com/username/repository.git
GITHUB_URL=
